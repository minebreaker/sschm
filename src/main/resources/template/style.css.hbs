{{! language=css }}
html {
  font-size: {{defaultFontSize}};
}

p {
  margin-bottom: 0.7rem;
}

.panel {
  margin-bottom: 1rem;
  padding: 1rem;
  border: solid 1px rgb(209, 209, 209);

  overflow: hidden;
  word-break: break-word;
  hyphens: auto;
}

.panel-event {
  background-color: #f8f8f8;
  color: #222222;
}

.panel-refuel {
  background-color: #f9a790;
  color: #222222;
}

.panel-maintenance {
  background-color: #c1f5fc;
color: #222222;
}
