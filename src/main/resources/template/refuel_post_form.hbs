<html lang="en">
<head>
  {{> component/head}}
  <title>SSCHM - Add refueling</title>

</head>

<body>

<div class="container">
  <h1>Add refueling</h1>

  <form method="post" action="/car/{{carId}}/refuel">

    <label for="car_name">Car Name</label>
    <p id="car_name">{{carName}}</p>

    <label for="odo">Odo</label>
    <input type="number" id="odo" name="odo" placeholder="0">
    <label for="amount">Amount</label>
    <input type="text" id="amount" name="amount" placeholder="0">
    <label for="price">Price</label>
    <input type="number" id="price" name="price" placeholder="0">
    <div>
      <input type="checkbox" id="no_previous_refuel" name="no_previous_refuel" value="true">
      <label for="no_previous_refuel" class="label-inline">Forgot to register the previous refuel</label>
    </div>
    <label for="event_date">Date</label>
    <input type="datetime-local" id="event_date" name="event_date">
    <label for="note">Note (optional)</label>
    <textarea id="note" name="note"></textarea>

    <button type="submit">Submit</button>
  </form>
</div>

</body>

</html>
