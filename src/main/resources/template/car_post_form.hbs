<html lang="en">
<head>
  {{> component/head}}
  <title>SSCHM - Add a new car</title>

</head>

<body>

<div class="container">
  <h1>Add a new car</h1>

  <form method="post" action="/car">
    <label for="name">Car name</label>
    <input type="text" id="name" name="name" placeholder="Your car name">
    <label for="odo">Odo (optional)</label>
    <input type="number" id="odo" name="odo" placeholder="0">
    <label for="price">Price (optional)</label>
    <input type="number" id="price" name="price" placeholder="0">
    <label for="event_date">Purchase date</label>
    <input type="datetime-local" id="event_date" name="event_date">
    <label for="note">Note (optional)</label>
    <textarea id="note" name="note"></textarea>

    <button type="submit">Submit</button>
  </form>
</div>

</body>

</html>
