<!DOCTYPE html>
<html lang="en">
<head>
  {{> component/head}}
  <title>SSCHM - {{car.name}}</title>

</head>

<body>

<div class="container">
  <h1>{{car.name}}</h1>
  {{#car.note}}
    {{#> component/panel}}
      {{#*inline "children"}}
        <p>{{car.note}}</p>
      {{/inline}}
    {{/component/panel}}
  {{/car.note}}
  <p>
    {{car.odo}}<br />
    {{efficiency.efficiency}}
  </p>

  <div>
    <a href="/car/{{car.id}}/refuel/new" class="button">Refuel</a>
  </div>

  <hr />

  <div>
    {{#car.photoId}}
      <img src="/photo/{{car.photoId}}" alt="car image">
    {{/car.photoId}}
    {{#events}}
      {{> component/event}}
    {{/events}}
  </div>


</div>

</body>

</html>
